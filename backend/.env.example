# Copy to .env and set your values
SECRET_KEY=your-secret-key-change-in-production
DATABASE_URL=sqlite:///./study_guider.db
GEMINI_API_KEY=your-gemini-api-key

# Email (SMTP) for verification and password reset. If not set, verification/reset links and codes are logged only.
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
FRONTEND_BASE_URL=https://localhost:5173

# Auth cookie: set SECURE_COOKIES=false for local dev over HTTP (e.g. http://localhost:5173)
# SECURE_COOKIES=false

# Admin: comma-separated user IDs that get is_admin=True on startup (e.g. ADMIN_USER_IDS=1 or 1,2)
# ADMIN_USER_IDS=
